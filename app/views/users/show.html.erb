<style type = "text/css">

	.profile{
		list-style-type: none;

	}

	.profile-info{
		display: inline-block;
		vertical-align: top;
	}

	.panel-button{
		vertical-align: bottom;
	}

	.avatar{
		width: 300px;
		height: 300px;
	}


</style>

<div class="container-fluid">
	<div class="jumbotron">
	  <h1>Welcome <% if @user %><%= @user.first_name %></h1><%end%>
	</div>

	<div class="panel panel-warning">
	  <div class="panel-heading">
	    <h3 class="panel-title">Your profile</h3>
	  </div>
	  <div class="panel-body">
			<div class="profile-info">
				<ul class = "profile">
					<li>First Name:</li>
					<li>Last Name:</li>
					<li>Email:</li>
				</ul>
			</div>
			<div class="profile-info">
				<ul class = "profile">
					<li><%= @user.first_name %></li>
					<li><%= @user.last_name %></li>
					<li><%= @user.email %></li>
				</ul>
			</div>
			<div class="profile-info">
				<ul class = "profile">
					<li>Address:</li>
	<!-- 				<% if @user.address_apt %><li>Apt:</li><%end%> -->
					<li>City:</li>
					<li>State:</li>
					<li>Zip:</li>
				</ul>
			</div>
			<div class="profile-info">
				<ul class = "profile">
					<li><%= @user.address_street %></li>
	<!-- 			<% if @user.address_apt %><li><%= @user.address_apt %></li><%end%> -->
					<li><%= @user.address_city %></li>
					<li><%= @user.address_state %></li>
					<li><%= @user.address_zip %></li>
				</ul>
			</div>
			<div class="profile-info">
				<ul class = "profile">
					<li>Avatar:</li>
				</ul>
			</div>
			<div class="profile-info">
				<ul class = "profile">
					<li class = "avatar"><%= image_tag @user.avatar.url(:medium) %></li>
				</ul>
			</div>
			<a href="/users/edit" class="btn btn-warning panel-button">Edit Profile</a>
		</div>
	</div>

	<div class="panel panel-warning">
	  <div class="panel-heading">
	    <h3 class="panel-title">Baby Birds</h3>
	  </div>
	  <div class="panel-body">
			<table class="table table-striped table-hover ">
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Email</th>
					<th>Phone</th>
					<th>Address</th>
					<th>City</th>
					<th>State</th>
					<th>Zip</th>
				</tr>
				<tr>
	<% 			if @contacts.length > 0
							@contacts.each{ | contact | %>
					<td><%= contact.first_name %></td>
					<td><%= contact.last_name %></td>
					<td><%= contact.email %></td>
					<td><%= contact.phone %></td>
					<td><%= contact.address_street %> <%= contact.address_apt %></td>
					<td><%= contact.address_city %></td>
					<td><%= contact.address_state %></td>
					<td><%= contact.address_zip %></td>
				</tr>
		<%	} end %>
			</table>
			<a href="/contacts/new" class="btn btn-warning panel-button">Add Contact</a>
	  </div>
	</div>

	<div class="panel panel-warning">
	  <div class="panel-heading">
	    <h3 class="panel-title">Subscriptions</h3>
	  </div>
	  <div class="panel-body">
	    Panel content
	  </div>
	</div>

</div>