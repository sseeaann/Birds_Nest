<style type = "text/css">

	.profile{
		list-style-type: none;

	}

	.profile-info{
		display: inline-block;
		vertical-align: top;
	}

	.panel-button{
		vertical-align: bottom;
	}

	.avatar{
		width: 300px;
		height: 300px;
	}

	.userProfile{
		width: 27%;
		display: inline-block;
		vertical-align: top;
	}

	.chirpList{
		width: 72%;
		display: inline-block;
		vertical-align: top;
	}

	.chirpTable{
		font-size: 15px;
	}

</style>

<div class="container-fluid">
	<div class="jumbotron">
	  <h1>Welcome <% if @user %><%= @user.first_name %></h1><%end%>
	</div>

	<div class="userProfile">
		<div class="panel panel-warning">
		  <div class="panel-heading">
		    <h3 class="panel-title">Your Profile</h3>
		  </div>
		  <div class="panel-body">
				<div class="profile-info">
					<ul class = "profile">
						<li>First Name:</li>
						<li>Last Name:</li>
						<li>Email:</li>
						<li>Address:</li>
		<!-- 				<% if @user.address_apt %><li>Apt:</li><%end%> -->
						<li>City:</li>
						<li>State:</li>
						<li>Zip:</li>
					</ul>
				</div>
				<div class="profile-info">
					<ul class = "profile">
						<li><%= @user.first_name %></li>
						<li><%= @user.last_name %></li>
						<li><%= @user.email %></li>
						<li><%= @user.address_street %></li>
		<!-- 			<% if @user.address_apt %><li><%= @user.address_apt %></li><%end%> -->
						<li><%= @user.address_city %></li>
						<li><%= @user.address_state %></li>
						<li><%= @user.address_zip %></li>
					</ul>
				</div>
				<div class="profile-info">
					<ul class = "profile">
						<li class = "avatar"><%= image_tag @user.avatar.url(:medium) %></li>
					</ul>
				</div>
				<a href="/users/edit" class="btn btn-warning panel-button">Edit Profile</a>
			</div>
		</div>
	</div>

	<div class="chirpList">
		<div class="panel panel-warning">
		  <div class="panel-heading">
		    <h3 class="panel-title">Baby Birds</h3>
		  </div>
		  <div class="panel-body">
				<table class="table table-striped table-hover chirpTable">
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Email</th>
					</tr>
					<tr>
		<% 			if @contacts.length > 0
								@contacts.each{ | contact | %>
						<td><%= contact.first_name %></td>
						<td><%= contact.last_name %></td>
						<td><%= contact.email %></td>
						<td><a href="/contacts/<%= contact.id %>/edit" class="btn btn-success panel-button">Chirp</a></td>
					</tr>
			<%	} end %>
				</table>
				<a href="/contacts/new" class="btn btn-primary panel-button">Add Bird</a>
				<a href="/contacts" class="btn btn-primary panel-button">Manage Birds</a>
		  </div>
		</div>
	</div>
</div>