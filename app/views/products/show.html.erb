<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center"><%=@product.name%></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-5 col-sm-3">
      <img src="<%=@product.image.url%>" width="100%">
    </div>
    <div class="col-xs-7 col-sm-6">
      <p><%=@product.description%></p>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="panel panel-primary">
        <div class="panel-heading"><h3 class=" panel-title text-center"><%= "$%5.2f" % @product.price%></h3></div>
        <div class="panel-body">
          <form>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="hidden" name="shoppingCart[product_id]" value="<%= form_authenticity_token %>">
            <div class="form-group">
              <label for="quantity" class="control-label">Quantity</label>
              <select class="form-control" id="quantity" name="shoppingCart[quantity]" required>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary">Add to Cart</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
