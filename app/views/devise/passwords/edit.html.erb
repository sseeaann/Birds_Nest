<div class="container">
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, wrapper: :horizontal_form) do |f| %>
  <%= f.hidden_field :reset_password_token %>
    <%= f.input :password, as: "New password", autofocus: true, autocomplete: "off" %>
    <%= f.input :password_confirmation, autocomplete: "off" %>
    <%= f.button :submit, "Change my password", class: "btn btn-default" %>

<% end %>

<%= render "devise/shared/links" %>
</div>