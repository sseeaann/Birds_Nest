<div class="container">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}, wrapper: :horizontal_form) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :first_name, autofocus: true %>
  <%= f.input :last_name %>
  <%= f.input :address_street %>
  <%= f.input :address_apt %>
  <%= f.input :address_city %>
  <%= f.input :address_state, collection: ["AL","AK","AZ","AR","CA","CO","CT","DE","FL","GA","HI","ID","IL","IN","IA","KS","KY","LA","ME","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","OH","OK","OR","PA","RI","SC","SD","TN","TX","UT","VT","VA","WA","WV","WI","WY"] %>
  <%= f.input :address_zip %>
  <%= f.input :phone %>
  <%= f.input :email %>
  <% if @validatable %>
  (<%= @minimum_password_length %> characters minimum)
  <% end %>
  <%= f.input :password, autocomplete: "off" %>
  <%= f.input :password_confirmation, autocomplete: "off" %>
  <%= f.button :submit, "Sign up", class: "btn btn-primary" %> <a href="/" class="btn btn-default">Back</a>
<% end %>

<p>Already have an account? <%= render "devise/shared/links" %></p>
</div>
