<div class="container">
  <h2>Log in</h2>
  <div class="col-xs-12">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}, wrapper: :horizontal_form) do |f| %>

      <%= f.input :email, autofocus: true %>

      <%= f.input :password, autocomplete: "off" %>


    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.button :submit, "Sign up", class: "btn btn-primary" %> <a href="/" class="btn btn-default">Back</a>
    </div>
  <% end %>

  <p>New bird? <%= render "devise/shared/links" %></p>
  </div>

  <div>
    <%= image_tag 'Chick_Shock.png' %>
  </div>

</div>